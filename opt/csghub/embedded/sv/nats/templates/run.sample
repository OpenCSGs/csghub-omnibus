#!/bin/bash

# Redirect stderr -> stdout
exec 2>&1

# fail on errors
set -e

{{- $dataDir := (datasource "config").nats.data | default "/var/opt/csghub/nats" }}
cd {{ $dataDir }}
exec chpst -e /opt/csghub/etc/nats/env -P \
  -U nats:nats \
  -u nats:nats \
  /opt/csghub/embedded/bin/nats-server -c {{ $dataDir }}/nats.conf

