{{- $nats := (datasource "config").nats }}
{{- $dataDir := $nats.data | default "/var/opt/csghub/nats" }}
{{- $auth := "" }}
{{- if has $nats "auth" }}
{{- $auth = $nats.auth }}
{{- end }}
debug = false
trace = false

# Client port of 4222 on all interfaces
port: 4222

# HTTP monitoring port
monitor_port: 8222

jetstream: enabled

jetstream {
    store_dir: {{ $dataDir }}/data/jetstream
    max_mem: 8G
    max_file: 10G
}

authorization {
  ADMIN = {
    publish = ">"
    subscribe = ">"
  }

  users = [
    {user: {{ $auth.user }}, password: {{ $auth.password | crypto.Bcrypt }}, permissions: $ADMIN}
  ]
}

